@page
@model IndexModel
@{
    ViewData["Title"] = "Strona główna";
}

<div class="hero-section bg-primary text-white p-5 mb-4 rounded">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Witaj w Multikinie</h1>
                <p class="lead">Odkryj najnowsze filmy i zarezerwuj bilety online w najlepszych cenach!</p>
                <a asp-page="/Movies/Index" class="btn btn-light btn-lg">
                    <i class="fas fa-ticket-alt me-2"></i>Zobacz repertuar
                </a>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-film" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="fas fa-star text-warning me-2"></i>Obecnie w kinach
            </h2>
        </div>
    </div>

    <div class="row">
        @foreach (var movie in Model.CurrentMovies)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm movie-card">
                    @if (movie.Poster != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(movie.Poster)"
                             class="card-img-top" alt="@movie.Title" style="height: 300px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                            <i class="fas fa-film fa-3x text-muted"></i>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text flex-grow-1">@movie.Description</p>
                        <div class="movie-details mb-3">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>@movie.Duration min |
                                <i class="fas fa-tags me-1"></i>@movie.Genre |
                                <i class="fas fa-star text-warning me-1"></i>@movie.Rating/10
                            </small>
                        </div>
                        <a asp-page="/Movies/Details" asp-route-id="@movie.MovieId" class="btn btn-primary">
                            <i class="fas fa-info-circle me-1"></i>Zobacz seanse
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.CurrentMovies.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-film fa-3x text-muted mb-3"></i>
            <h3 class="text-muted">Brak dostępnych filmów</h3>
            <p class="text-muted">Sprawdź ponownie wkrótce!</p>
        </div>
    }

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-couch fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Komfortowe sale</h5>
                    <p class="card-text">Nowoczesne sale kinowe z najlespszym dźwiękiem i obrazem.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-mobile-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Rezerwacja online</h5>
                    <p class="card-text">Szybka i łatwa rezerwacja biletów przez internet.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fa-solid fa-cookie-bite fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Przekąski</h5>
                    <p class="card-text">Szeroki wybór przekąsek i napojów w atrakcyjnych cenach.</p>
                </div>
            </div>
        </div>
    </div>
</div>
