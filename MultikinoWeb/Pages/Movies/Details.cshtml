@page "{id:int}"
@model MovieDetailsModel
@{
    ViewData["Title"] = Model.Movie?.Title ?? "Szczegóły filmu";
}

@if (Model.Movie == null)
{
    <div class="alert alert-danger">
        <h4>Film nie został znaleziony</h4>
        <p>Przepraszamy, ale film o podanym ID nie istnieje.</p>
        <a asp-page="/Movies/Index" class="btn btn-primary">Powrót do filmów</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            @if (Model.Movie.Poster != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Movie.Poster)"
                     class="img-fluid rounded shadow" alt="@Model.Movie.Title" style="width: 100%;">
            }
            else
            {
                <div class="poster-placeholder bg-light d-flex align-items-center justify-content-center rounded shadow" style="height: 400px;">
                    <i class="fas fa-film fa-5x text-muted"></i>
                </div>
            }
        </div>
        
        <div class="col-md-8">
            <div class="movie-details">
                <h1 class="mb-3">@Model.Movie.Title</h1>
                
                <div class="movie-info mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <i class="fas fa-user-tie me-2"></i>
                                <strong>Reżyser:</strong> @Model.Movie.Director
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-tags me-2"></i>
                                <strong>Gatunek:</strong> @Model.Movie.Genre
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-clock me-2"></i>
                                <strong>Czas trwania:</strong> @Model.Movie.Duration min
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">
                                <i class="fas fa-calendar me-2"></i>
                                <strong>Premiera:</strong> @Model.Movie.ReleaseDate.ToString("dd.MM.yyyy")
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-star text-warning me-2"></i>
                                <strong>Ocena:</strong> @Model.Movie.Rating/10
                            </p>
                        </div>
                    </div>
                </div>

                <div class="movie-description mb-4">
                    <h5><i class="fas fa-info-circle me-2"></i>Opis filmu</h5>
                    <p class="text-muted">@Model.Movie.Description</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sekcja seansów -->
    <div class="mt-5">
        <h3><i class="fas fa-calendar-alt me-2"></i>Dostępne seanse</h3>
        
        @if (Model.Movie.Screenings.Any())
        {
            <!-- Grupowanie seansów według dat -->
            
                var screeningsByDate = Model.Movie.Screenings
                    .Where(s => s.StartTime > DateTime.Now)
                    .GroupBy(s => s.StartTime.Date)
                    .OrderBy(g => g.Key);
            

            @foreach (var dateGroup in screeningsByDate)
            {
                <div class="screening-date-group mb-4">
                    <h5 class="bg-light p-3 rounded">
                        <i class="fas fa-calendar me-2"></i>
                        @dateGroup.Key.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("pl-PL"))
                    </h5>
                    
                    <div class="row">
                        @foreach (var screening in dateGroup.OrderBy(s => s.StartTime))
                        {
                            <div class="col-md-6 col-lg-4 mb-3">
                                <div class="card screening-card h-100">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <h6 class="card-title mb-0">
                                                <i class="fas fa-clock me-1"></i>
                                                @screening.StartTime.ToString("HH:mm") - @screening.EndTime.ToString("HH:mm")
                                            </h6>
                                            <span class="badge bg-primary">@screening.TicketPrice.ToString("C")</span>
                                        </div>
                                        
                                        <p class="card-text mb-2">
                                            <i class="fas fa-couch me-1"></i>
                                            <strong>Sala:</strong> @screening.Hall.HallName
                                        </p>
                                        
                                        <p class="card-text mb-2">
                                            <i class="fas fa-crown me-1"></i>
                                            <strong>Typ:</strong> 
                                            <span class="badge bg-secondary">@screening.Hall.HallType</span>
                                        </p>
                                        
                                        <p class="card-text mb-3">
                                            <i class="fas fa-users me-1"></i>
                                            <strong>Dostępne miejsca:</strong>
                                            <span class="@(screening.AvailableSeats < 10 ? "text-danger" : "text-success")">
                                                @screening.AvailableSeats / @screening.Hall.Capacity
                                            </span>
                                        </p>
                                        
                                        @if (screening.AvailableSeats > 0)
                                        {
                                            @if (screening.StartTime > DateTime.Now.AddMinutes(30))
                                            {
                                                <a asp-page="/Bookings/Create" asp-route-screeningId="@screening.ScreeningId" 
                                                   class="btn btn-success w-100">
                                                    <i class="fas fa-ticket-alt me-1"></i>Kup bilet
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary w-100" disabled>
                                                    <i class="fas fa-clock me-1"></i>Za późno na rezerwację
                                                </button>
                                            }
                                        }
                                        else
                                        {
                                            <button class="btn btn-danger w-100" disabled>
                                                <i class="fas fa-times me-1"></i>Wyprzedane
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Brak dostępnych seansów</strong><br>
                Obecnie nie ma zaplanowanych seansów dla tego filmu.
            </div>
        }
    </div>

    <!-- Przycisk powrotu -->
    <div class="mt-4">
        <a asp-page="/Movies/Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Powrót do listy filmów
        </a>
    </div>
}