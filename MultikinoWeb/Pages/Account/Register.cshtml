@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white text-center">
                <h3><i class="fas fa-user-plus me-2"></i>Rejestracja</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="RegisterData.FirstName" class="form-label">
                                    <i class="fas fa-user me-1"></i>Imię
                                </label>
                                <input asp-for="RegisterData.FirstName" class="form-control" placeholder="Wprowadź imię" />
                                <span asp-validation-for="RegisterData.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="RegisterData.LastName" class="form-label">
                                    <i class="fas fa-user me-1"></i>Nazwisko
                                </label>
                                <input asp-for="RegisterData.LastName" class="form-control" placeholder="Wprowadź nazwisko" />
                                <span asp-validation-for="RegisterData.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterData.Email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email
                        </label>
                        <input asp-for="RegisterData.Email" class="form-control" type="email" placeholder="Wprowadź email" />
                        <span asp-validation-for="RegisterData.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterData.Password" class="form-label">
                            <i class="fas fa-lock me-1"></i>Hasło
                        </label>
                        <input asp-for="RegisterData.Password" class="form-control" type="password" placeholder="Wprowadź hasło (min. 6 znaków)" />
                        <span asp-validation-for="RegisterData.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterData.ConfirmPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>Potwierdź hasło
                        </label>
                        <input asp-for="RegisterData.ConfirmPassword" class="form-control" type="password" placeholder="Potwierdź hasło" />
                        <span asp-validation-for="RegisterData.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100 mb-3">
                        <i class="fas fa-user-plus me-1"></i>Zarejestruj się
                    </button>

                    <div class="text-center">
                        <p>
                            Masz już konto?
                            <a asp-page="/Account/Login" class="text-decoration-none">
                                Zaloguj się tutaj
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}