@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white text-center">
                <h3><i class="fas fa-sign-in-alt me-2"></i>Logowanie</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="LoginData.Email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email
                        </label>
                        <input asp-for="LoginData.Email" class="form-control" placeholder="wprowadź email" />
                        <span asp-validation-for="LoginData.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LoginData.Password" class="form-label">
                            <i class="fas fa-lock me-1"></i>Hasło
                        </label>
                        <input asp-for="LoginData.Password" class="form-control" type="password" placeholder="wprowadź hasło" />
                        <span asp-validation-for="LoginData.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="LoginData.RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="LoginData.RememberMe" class="form-check-label">
                            Zapamiętaj mnie
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="fas fa-sign-in-alt me-1"></i>Zaloguj się
                    </button>

                    <div class="text-center">
                        <p>
                            Nie masz konta?
                            <a asp-page="/Account/Register" class="text-decoration-none">
                                Zarejestruj się tutaj
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.LoginData.Email == "admin@multikino.pl")
        {
            <div class="alert alert-info mt-3">
                <strong>Konto testowe administratora:</strong><br>
                Email: admin@multikino.pl<br>
                Hasło: admin123
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}